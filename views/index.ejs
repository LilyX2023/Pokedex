    <%- include ("./cssjs.ejs") %>
</head>
<body>
    <h1>Pokedex</h1>
    <ul id = "pokeimg">
    <% for (let i = 0; i < pokemons.length; i++){ %>

        <a href="/pokemon/<%= i %>"><li><img src= "<%= pokemons[i].img%>"></li></a>
        <form action="/pokemon/<%= i %>?_method=DELETE" method="post">
            <input type="submit" value="Delete Pokemon">
        </form>

    <% } %>
    </ul>
</body>
</html>